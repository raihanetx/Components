                <div class="upload-zone" onclick="document.getElementById('catImageInput').click()">
                    <input type="file" id="catImageInput" class="hidden" accept="image/*" onchange="handleImageUpload(this.files)">
                    <div id="uploadPlaceholder">
                        <svg style="width:32px;height:32px;display:block;margin:0 auto 8px;opacity:0.5;color:#64748b;" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"/>
                        </svg>
                        <p style="font-size:14px !important; color:#64748b;">Click to upload</p>
                    </div>
                    <div id="imagePreviewArea" class="hidden" style="display:none;flex-direction:column;align-items:center;">
                        <img id="imagePreviewSrc" src="" style="width:64px;height:64px;object-fit:cover;border-radius:8px;margin-bottom:8px;">
                        <p style="font-size:14px !important; color:#16a34a;">Image Loaded</p>
                    </div>
                </div>
            </div>
        </div>

        <div style="display:flex;gap:12px;margin-top:32px;">
            <button type="button" class="btn-cancel" onclick="closeEdit()">Cancel</button>
            <button type="button" class="btn-primary" onclick="saveChanges()">Save Changes</button>
        </div>
    </div>
