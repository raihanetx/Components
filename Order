<script>
function toggleDetails(id) {
    const target = document.getElementById('panel-' + id);
    const allPanels = document.querySelectorAll('.details-panel');
    const allBtns = document.querySelectorAll('.view-btn');

    const isVisible = target.style.display === 'block';
    allPanels.forEach(p => p.style.display = 'none');
    allBtns.forEach(b => b.textContent = 'View Details');

    if (!isVisible) {
        target.style.display = 'block';
        event.currentTarget.textContent = 'Hide Details';
    }
}

function processAction(id, type) {
    const area = document.getElementById('action-area-' + id);
    const result = document.getElementById('result-' + id);
    const badge = document.getElementById('stat-' + id);

    area.style.display = 'none';
    result.style.display = 'inline-flex';
    result.style.alignItems = 'center';

    if (type === 'confirm') {
        badge.textContent = '[Confirmed]';
        badge.className = 'status-bracket confirmed';
        result.innerHTML = `
            <span>Admin Action: <span class="status-bracket confirmed">[Confirmed]</span></span> 
            <span style="margin: 0 10px; opacity: 0.2;">|</span> 
            <i class="ri-truck-line" style="margin-right:4px;"></i> 
            <span>Courier: <span class="status-bracket review">[In Review]</span></span>
        `;
    } else {
        badge.textContent = '[Cancelled]';
        badge.className = 'status-bracket cancelled';
        result.innerHTML = `<span>Admin Action: <span class="status-bracket cancelled">[Cancelled]</span></span>`;
    }
}
</script>

