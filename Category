<!-- Toast -->
<div id="toast">
    <i class="ri-check-double-line" style="color:#16a34a; font-size:16px !important;"></i>
    <span id="toastMsg">Saved!</span>
</div>


<script>
let currentRow = null
let currentMode = 'icon'

function deleteRow(el) {
    if (confirm("Delete this category?")) el.closest('.order-card').remove()
}

function openEdit(el) {
    currentRow = el.closest('.category-row')

    document.getElementById('categoryName').value = currentRow.dataset.name || ''
    document.getElementById('iconCode').value = currentRow.dataset.icon || ''
    document.getElementById('imagePreviewSrc').src = ''
    document.getElementById('uploadPlaceholder').classList.remove('hidden')
    document.getElementById('imagePreviewArea').style.display = 'none'

    setMode(currentRow.dataset.type || 'icon')
    validateAndPreview()

    document.getElementById('overviewPage').style.display = 'none'
    document.getElementById('editPage').classList.add('show')
}

function closeEdit() {
    document.getElementById('editPage').classList.remove('show')
    document.getElementById('overviewPage').style.display = 'block'
    currentRow = null
}

function setMode(mode) {
    currentMode = mode
    document.getElementById('btnIcon').classList.toggle('active', mode === 'icon')
    document.getElementById('btnImage').classList.toggle('active', mode === 'image')
    document.getElementById('toggleSlider').classList.toggle('right', mode === 'image')
    document.getElementById('iconModeContent').classList.toggle('hidden', mode !== 'icon')
    document.getElementById('imageModeContent').classList.toggle('hidden', mode !== 'image')
}

function validateAndPreview() {
    const code = document.getElementById('iconCode').value.trim()
    const box = document.getElementById('previewBox')
    box.classList.remove('valid', 'error')
    if (code.startsWith('ri-') && code.length > 3) {
        box.innerHTML = `<i class="${code}" style="font-size:24px !important;"></i>`
        box.classList.add('valid')
    } else if (code.length > 0) {
        box.innerHTML = `<i class="ri-close-circle-line" style="font-size:24px !important;"></i>`
        box.classList.add('error')
    } else {
        box.innerHTML = `<i class="ri-cursor-line" style="opacity:0.5;font-size:24px !important;"></i>`
    }
}

function handleImageUpload(files) {
    if (files.length > 0) {
        const reader = new FileReader()
        reader.onload = (e) => {
            document.getElementById('uploadPlaceholder').classList.add('hidden')
            const area = document.getElementById('imagePreviewArea')
            area.style.display = 'flex'
            area.classList.remove('hidden')
            document.getElementById('imagePreviewSrc').src = e.target.result
        }
        reader.readAsDataURL(files[0])
    }
}

function saveChanges() {
    const name = document.getElementById('categoryName').value.trim()
    if (!name) { showToast('Please enter a category name'); return }
    if (!currentRow) return

    const icon = document.getElementById('iconCode').value.trim()
    const image = document.getElementById('imagePreviewSrc').src

    currentRow.dataset.name = name
    currentRow.dataset.type = currentMode
    currentRow.dataset.icon = icon
    currentRow.dataset.image = image

    currentRow.querySelector('.category-name').textContent = name

    // Update source cell (2nd cell in the grid row)
    const cells = currentRow.querySelector('.order-grid-row').children
    cells[1].textContent = currentMode === 'icon' ? 'Icon Library' : 'Image Upload'

    const iconBox = currentRow.querySelector('.icon-box')
    if (currentMode === 'icon') {
        iconBox.style.border = '1px solid #e2e8f0'
        iconBox.style.overflow = ''
        iconBox.innerHTML = `<i class="${icon}" style="font-size:18px !important;"></i>`
    } else {
        iconBox.style.border = 'none'
        iconBox.style.overflow = 'hidden'
        iconBox.innerHTML = `<img src="${image}" style="width:36px;height:36px;object-fit:cover;border-radius:6px;display:block;">`
    }

    showToast('Category Updated Successfully!')
    closeEdit()
}

function showToast(msg) {
    const toast = document.getElementById('toast')
    document.getElementById('toastMsg').textContent = msg
    toast.classList.add('show')
    setTimeout(() => toast.classList.remove('show'), 2200)
}
</script>

</body>
</html>
